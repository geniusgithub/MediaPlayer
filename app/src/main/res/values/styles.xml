<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
           <item name="android:imageButtonStyle">@style/CustomImagebuttonStyle</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.Design">
    </style>

    <style name="ActivityBaseTheme" parent="Base.Theme.Design">
      <!--  <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>-->
    </style>

    <style name="Base.Theme.Design" parent="@style/Theme.AppCompat.Light.NoActionBar">
           <item name="colorPrimary">@color/colorPrimary</item>
           <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
           <item name="colorAccent">@color/colorAccent</item>
            <item name="android:windowBackground">@color/window_background</item>
            <item name="android:windowIsTranslucent">true</item>
    </style>

<!--    <style name="Theme.AppStartLoad" parent="android:Theme.Black.NoTitleBar.Fullscreen">-->
    <style name="Theme.AppStartLoad" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomImagebuttonStyle" parent="@android:style/Widget.DeviceDefault.Light.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BlueButton">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>


    <style name="GreenButton">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="leba_bg_base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CardView">
        <item name="cardBackgroundColor">#FFFFFFFF</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="DeviceCardStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>